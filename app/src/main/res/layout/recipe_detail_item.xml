<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_item_parentLayout_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stepThumbnail_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_item_heading_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="This is the heading"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/stepThumbnail_id"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_detail_item_descr_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the description"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_detail_item_heading_id"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_item_heading_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>